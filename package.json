{
  "name": "grants-ui-backend",
  "version": "0.0.0",
  "description": "grants-ui-backend",
  "main": "src/index.js",
  "type": "module",
  "engines": {
    "node": ">=24.11.1"
  },
  "scripts": {
    "docker:dev": "NODE_ENV=development npm run server:watch",
    "dev": "NODE_ENV=development npm run server:watch",
    "dev:debug": "NODE_ENV=development npm run server:debug",
    "format": "prettier --write \"**/*.{cjs,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{cjs,js,json,md}\"",
    "generate:auth-header": "node scripts/generateHeader.js",
    "git:pre-commit-hook": "npm run format:check && npm run lint && npm test",
    "postinstall": "npm run setup:husky",
    "lint": "eslint --cache --cache-strategy content \"**/*.{cjs,js}\"",
    "lint:fix": "npm run lint -- --fix",
    "postversion": "git add package.json package-lock.json && git commit -m $npm_package_version",
    "test": "node --no-experimental-require-module ./node_modules/jest/bin/jest.js --coverage --verbose --runInBand",
    "test:watch": "node --no-experimental-require-module ./node_modules/jest/bin/jest.js --watch",
    "test:integration": "jest --config jest.int.config.js",
    "server:watch": "nodemon --inspect=0.0.0.0 --ext js,json --legacy-watch ./src",
    "server:debug": "nodemon --inspect-brk=0.0.0.0 --ext js,json --legacy-watch ./src",
    "start": "NODE_ENV=production node --use-strict .",
    "setup:husky": "node -e \"try { (await import('husky')).default() } catch (e) { if (e.code !== 'ERR_MODULE_NOT_FOUND') throw e }\" --input-type module",
    "snyk-test": "snyk test",
    "snyk-monitor": "snyk monitor"
  },
  "author": "Defra DDTS",
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@defra/hapi-tracing": "1.28.0",
    "@elastic/ecs-pino-format": "1.5.0",
    "@hapi/boom": "10.0.1",
    "@hapi/hapi": "21.4.3",
    "aws-embedded-metrics": "4.2.0",
    "aws4": "1.13.2",
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "dotenv": "17.2.3",
    "global-agent": "3.0.0",
    "hapi-pino": "13.0.0",
    "hapi-pulse": "3.0.1",
    "https-proxy-agent": "7.0.6",
    "joi": "17.13.3",
    "mongo-locks": "3.0.2",
    "mongodb": "6.20.0",
    "node-fetch": "3.3.2",
    "pino": "10.1.0",
    "pino-pretty": "13.1.2",
    "snyk": "1.1297.3",
    "testcontainers": "11.8.1",
    "undici": "7.16.0"
  },
  "devDependencies": {
    "@babel/core": "7.26.9",
    "@babel/preset-env": "7.26.9",
    "@shelf/jest-mongodb": "5.2.2",
    "autoprefixer": "10.4.20",
    "babel-jest": "30.2.0",
    "babel-plugin-module-resolver": "5.0.2",
    "babel-plugin-transform-import-meta": "2.3.2",
    "eslint": "9.39.1",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "neostandard": "0.12.2",
    "nodemon": "3.1.10",
    "npm-run-all": "4.1.5",
    "prettier": "3.7.1"
  }
}
